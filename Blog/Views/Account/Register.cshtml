@model Blog.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<link type="text/css" rel="stylesheet" href="../../css/Site.css" />
<div class="form-container">
	<form method="post" asp-controller="Account" asp-action="Register">
		<div asp-validation-summary="ModelOnly"></div>
		<h2 class="text-center"><strong>Create</strong> an account.</h2>
		<div class="form-group">			
			<input class="form-control" placeholder="UserName" asp-for="Username" />
			<span asp-validation-for="Username"></span>
		</div>
		<div class="form-group">			
			<input class="form-control" placeholder="Email" asp-for="Email" />
			<span asp-validation-for="Email"></span>
		</div>
		<div class="form-group">			
			<input class="form-control" placeholder="Password" asp-for="Password" />
			<span asp-validation-for="Password"></span>
		</div>
		<div class="form-group">			
			<input class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword" />
			<span asp-validation-for="ConfirmPassword"></span>
		</div>
		<div class="form-group">
			<input class="btn btn-primary btn-block" type="submit" value="Register" />
		</div>
	</form>
</div>